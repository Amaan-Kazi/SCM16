{
	"name": "scm16-extension",
	"displayName": "SCM16-Extension",
	"description": "Languages Support for SCM16",
	"publisher": "Amaan-Kazi",
	"version": "1.0.0",
	"icon": "./icon.png",
	"engines": {
		"vscode": "^1.95.0"
	},
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"languages": [
			{
				"id": "assembly",
				"aliases": ["ASSEMBLY", "assembly"],
				"extensions": ["assembly"],
				"configuration": "./language-configurations/assembly-language-configuration.json"
			},
			{
				"id": "scma",
				"aliases": ["SCMA", "scma"],
				"extensions": ["scma"],
				"configuration": "./language-configurations/scma-language-configuration.json"
			},
			{
				"id": "scmcode",
				"aliases": ["SCMCODE", "scmcode"],
				"extensions": ["scmcode"],
				"configuration": "./language-configurations/scmcode-language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "assembly",
				"scopeName": "source.assembly",
				"path": "./syntaxes/assembly.tmLanguage.json"
			},
			{
				"language": "scma",
				"scopeName": "source.scma",
				"path": "./syntaxes/scma.tmLanguage.json"
			},
			{
				"language": "scmcode",
				"scopeName": "source.scmcode",
				"path": "./syntaxes/scmcode.tmLanguage.json"
			}
		]
	},
	"repository": {
        "type": "git",
        "url": "https://github.com/Amaan-Kazi/SCM16"
    }
}
