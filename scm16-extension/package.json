{
  "name": "scm16-extension",
  "displayName": "SCM16 Extension",
  "description": "Simple code highlighting and suggestions for files of SCM16",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "languages": [
        {
            "id": "assembly",
            "aliases": ["Assembly", "assembly"],
            "extensions": [".assembly"],
            "configuration": "./language-configuration.json"
        }
    ],
    "grammars": [
        {
            "language": "assembly",
            "scopeName": "source.assembly",
            "path": "./syntaxes/assembly.tmLanguage.json"
        }
    ],
    "themes": [
        {
            "label": "Assembly Theme",
            "uiTheme": "vs-dark",
            "path": "./themes/assembly-color-theme.json"
        }
    ],
    "commands": [{
      "command": "scm16-extension.helloWorld",
      "title": "Hello World"
    }]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "eslint": "^9.11.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
