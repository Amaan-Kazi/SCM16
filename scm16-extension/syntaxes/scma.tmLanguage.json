{
  "patterns": [
		{
			"match": "^@\\w+:",
			"name": "variable.parameter.label"
		},
		{
			"match": "\\b[a-zA-Z]+\\b",
			"name": "keyword.control"
		},
		{
			"match": "@[a-zA-Z_][a-zA-Z0-9_]*",
			"name": "variable.parameter.label"
		},
		{
			"match": "\\bR\\d{1,2}\\b",
			"name": "variable.language.register"
		},
		{
			"match": "\\b\\d+\\b",
			"name": "constant.numeric"
		},
		{
			"match": "#.*",
			"name": "comment.line.number-sign"
		}
  	],
  	"scopeName": "source.scma"
}
